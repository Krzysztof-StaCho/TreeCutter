@model IEnumerable<Category>

<ul class="nav nav-pills flex-column">

    <li class="nav-item">
            <a class="nav-link @(((int?)ViewData["ActiveCategory"]).GetValueOrDefault() == 0 ? "active" : "")" asp-controller="Home" asp-action="Index" asp-route-id="0">All Categories</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(((int?)ViewData["ActiveCategory"]).GetValueOrDefault() == -1 ? "active" : "")" asp-controller="Home" asp-action="Index" asp-route-id="-1">All Promoted</a>
    </li>

    @foreach (Category category in Model)
    {
        <li class="nav-item">
            <a class="nav-link @(((int?)ViewData["ActiveCategory"]).GetValueOrDefault() == category.Id ? "active" : "")" asp-controller="Home" asp-action="Index" asp-route-id="@category.Id">@category.Name</a>
        </li>
    }
</ul>