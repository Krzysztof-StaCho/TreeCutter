@model Page
@{
    ViewData["Title"] = Model.Title;
    Layout = "_Layout.cshtml";
}

<div class="card shadow border-0 mt-4 mb-4">
    <div class="card-header bg-primary bg-gradient text-light py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">@Model.Title</h3>
                <p class="text-white-50 fw-semibold mb-0">@Model.CreatedAt.ToShortDateString()</p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="py-3">
            <div class="row">
                <div class="col-6 col-md-2 offset-lg-1 pb-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient mb-5 fw-semibold btn-sm text-uppercase">
                        <small>Back to shop</small>
                    </a>
                </div>
            </div>
            <div class="col-12">
                @Html.Raw(Model.Description)
            </div>
        </div>
    </div>
</div>