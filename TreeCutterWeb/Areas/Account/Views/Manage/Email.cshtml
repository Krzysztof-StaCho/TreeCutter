@model EmailVM
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = "Email";
}

<h3>Manage Email</h3>
<div class="row">
    <div class="col-md-12">
        <form id="email-form" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Please enter your email." disabled />
                <label asp-for="Email" class="ms-2 text-muted"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="NewEmail" class="form-control" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
                <label asp-for="NewEmail" class="ms-2 text-muted"></label>
                <span asp-validation-for="NewEmail"></span>
            </div>
            <button id="change-email-button" type="submit" class="w-100 btn btn-lg btn-primary">Change Email</button>
        </form>
    </div>
</div>