@model PasswordVM
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = "Password";
}

<h3>Change password</h3>
<div class="row">
    <div class="col-md-12">
        <form id="change-password-form" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password" />
                <label asp-for="OldPassword" class="ms-2 text-muted"></label>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password" />
                <label asp-for="NewPassword" class="ms-2 text-muted"></label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password" />
                <label asp-for="ConfirmPassword" class="ms-2 text-muted"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}