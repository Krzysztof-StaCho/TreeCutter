@model ManageProfileVM
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = "Index";
}

<h3>Profile</h3>
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." />
                <label asp-for="Username" class="ms-2 text-muted"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="PhoneNumber" class="ms-2 text-muted"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="StreetAddress" class="form-control" placeholder="Please enter your street address." />
                <label asp-for="StreetAddress" class="ms-2 text-muted"></label>
                <span asp-validation-for="StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="City" class="form-control" placeholder="Please enter your city." />
                <label asp-for="City" class="ms-2 text-muted"></label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="State" class="form-control" placeholder="Please enter your state." />
                <label asp-for="State" class="ms-2 text-muted"></label>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="PostalCode" class="form-control" placeholder="Please enter your postal code." />
                <label asp-for="PostalCode" class="ms-2 text-muted"></label>
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}